# roles/k3s_dev_environment/templates/buildkitd.service.j2
[Unit]
Description=BuildKit Daemon
Documentation=https://github.com/moby/buildkit
After=network-online.target

[Service]
Type=simple
# Rootless configuration is more complex than expected. Stick to root for now.
# User={{ buildkit_user }}
# Group={{ buildkit_group }}
ExecStart={{ local_bin_path }}/buildkitd \
    --debug \
    --addr {{ buildkit_socket_path }} \
    --addr {{ buildkit_tcp_addr }} \
    --root {{ buildkit_data_dir }} \
    --group {{ buildkit_group }}
# Rootless configuration is more complex than expected. Stick to root for now.
#    --oci-worker-no-process-sandbox # Often needed when buildkitd runs as non-root for some operations
Restart=always
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
